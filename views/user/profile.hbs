<div class="container">

    <h1>Profile of {{user.username}}</h1>
    <hr>
    <img src="{{user.avatar}}" alt="avatar">
    <hr>
    <p>Description: {{user.description}}</p>
    <hr>
    <p>Email: {{user.email}}</p>
    <hr>
    <p>Role: {{user.role}}</p>

    <div class="row">
        {{#each movie}}

        <div class="card col-md-4">
            <img src="https://www.themoviedb.org/t/p/w440_and_h660_face{{poster_path}}" alt="" srcset="">
            <h3>{{title}}</h3>
            <p>{{overview}}</p>
            <a href='/movie/{{id}}/details' class="btn btn-primary">Go to details</a>
        </div>

        {{/each}}

    </div>


    {{#if isADMIN}}
    <a href="/user/{{user._id}}/edit" class="btn btn-warning btn-sm">Edit</a>
    <form action="/user/{{user._id}}/delete" method="POST">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
    </form>
    {{/if}}
    <a href="/user/list" class="btn btn-dark">Back to list</a>

</div>