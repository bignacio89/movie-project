<div class="container">
    <div class="row justify-content-center">

        <h1>Edit Profile</h1>

        <form action="/{user_id}/edit'" method="POST">

            <div class="mb-3">
                <label for="usernameInput" class="form-label">Username:</label>
                <input type="text" class="form-control" name="username" id="usernameInput" value="{{username}}">
            </div>

            <div class="mb-3">
                <label for="emailInput" class="form-label">Email:</label>
                <input type="email" class="form-control" name="email" id="emailInput" value="{{email}}">
            </div>

            <div class="mb-3">
                <label for="descriptionInput" class="form-label">Description:</label>
                <input type="description" class="form-control" name="description" id="descriptionInput"
                    value="{{description}}">
            </div>

            <div class="mb-3">
                <label for="imageInput" class="form-label">Avatar:</label>
                <input type="url" class="form-control" name="avatar" id="imageInput" value="{{avatar}}">
            </div>
            <div>
                <button type="submit" class="btn btn-dark">Edit</button>
            </div>

            {{#if errorMessage}}
            <div id="errorMessage">
                <p>{{errorMessage}}</p>
            </div>
            {{/if}}


        </form>


    </div>
</div>