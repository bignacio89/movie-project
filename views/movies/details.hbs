<div class="container">

    <h1>{{movies.original_title}}</h1>
    <hr>
    <img src="https://www.themoviedb.org/t/p/w440_and_h660_face{{movies.poster_path}}" alt="movie">
    <hr>
    <p>{{movies.overview}}</p>
    <hr>
    <p>Date: {{movies.release_date}}</p>
    <p>Runtime: {{movies.runtime}}</p>
    <p>Genre: {{movies.genres.[0].name}}</p>
    <p>Score: {{movies.vote_average}}</p>



    <a href="/movies/{{movies._id}}/edit" class="btn btn-warning btn-sm">Edit</a>
    <form action="/movies/{{movies._id}}/delete" method="POST">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
    </form>

    <a href="/movies/list" class="btn btn-dark">Back to list</a>

</div>