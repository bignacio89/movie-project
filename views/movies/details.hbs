<div class="container">

    <h1>{{movies.title}}</h1>
    <hr>
    <img src="{{movies.poster}}" alt="movie">
    <hr>
    <p>Plot: {{movies.plot}}</p>
    <hr>
    <p>Year: {{movies.year}}</p>
    <p>Runtime: {{movies.runtime}}</p>
    <p>Genre: {{movies.genre}}</p>
    <p>Director: {{movies.director}}</p>
    <p>Actors: {{movies.actors}}</p>
    <p>Type: {{movies.type}}</p>
    <p>Metascore: {{movies.metascore}}</p>
    <p>IMDB Rating: {{movies.imdbRating}}</p>
    <p>Owner: {{movies.owner}}</p>


    <a href="/movies/{{movies._id}}/edit" class="btn btn-warning btn-sm">Edit</a>
    <form action="/movies/{{movies._id}}/delete" method="POST">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
    </form>

    <a href="/movies/list" class="btn btn-dark">Back to list</a>

</div>