<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Add new movie</h1>
            <hr>

            <form action="/movies/{{_id}}/edit" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="original_title" class="form-label">Title:</label>
                    <input type="text" class="form-control" id="original_title" name="original_title"
                        value="{{original_title}}">
                </div>

                <div class="mb-3">
                    <label for="release_date" class="form-label">Date:</label>
                    <input type="text" class="form-control" id="release_date" name="release_date"
                        value="{{release_date}}">
                </div>

                <div class="mb-3">
                    <label for="runtime" class="form-label">Runtime:</label>
                    <input type="text" class="form-control" id="runtime" name="runtime" value="{{runtime}}">
                </div>

                <div class="mb-3">
                    <label for="genres" class="form-label">Genres:</label>
                    <input type="text" class="form-control" id="genres" name="genres" value="{{genres}}">
                </div>

                <div class="mb-3">
                    <label for="overview" class="form-label">Plot:</label>
                    <input type="text" class="form-control" id="overview" name="overview" value="{{overview}}">
                </div>

                <div class="mb-3">
                    <label for="poster_path" class="form-label">Poster:</label>
                    <input type="file" class="form-control" id="poster_path" name="poster_path" value="{{poster_path}}">
                </div>

                <div class="mb-3">
                    <label for="vote_average" class="form-label">Score:</label>
                    <input type="text" class="form-control" id="vote_average" name="vote_average"
                        value="{{vote_average}}">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Edit movie</button>
                </div>

            </form>
        </div>
    </div>
</div>