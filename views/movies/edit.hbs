<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Add new movie</h1>
            <hr>

            <form action="/movies/{{_id}}/edit" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{title}}">
                </div>

                <div class="mb-3">
                    <label for="year" class="form-label">Year:</label>
                    <input type="text" class="form-control" id="year" name="year" value="{{year}}">
                </div>

                <div class="mb-3">
                    <label for="runtime" class="form-label">Runtime:</label>
                    <input type="text" class="form-control" id="runtime" name="runtime" value="{{runtime}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre:</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="{{genre}}">
                </div>

                <div class="mb-3">
                    <label for="director" class="form-label">Director:</label>
                    <input type="text" class="form-control" id="director" name="director" value="{{director}}">
                </div>

                <div class="mb-3">
                    <label for="actors" class="form-label">Actors:</label>
                    <input type="text" class="form-control" id="actors" name="actors" value="{{actors}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot:</label>
                    <input type="text" class="form-control" id="plot" name="plot" value="{{plot}}">
                </div>

                <div class="mb-3">
                    <label for="poster" class="form-label">Poster:</label>
                    <input type="file" class="form-control" id="poster" name="poster" value="{{poster}}">
                </div>


                <div class="mb-3">
                    <label for="type" class="form-label">Type:</label>
                    <select id="type" class="form-select" name="type" value="{{type}}">
                        <option selected disabled>...</option>
                        <option value="movie">Movie</option>
                        <option value="series">Series</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="metascore" class="form-label">Metascore:</label>
                    <input type="text" class="form-control" id="metascore" name="metascore" value="{{metascore}}">
                </div>

                <div class="mb-3">
                    <label for="imdbRating" class="form-label">IMDB Rating:</label>
                    <input type="text" class="form-control" id="imdbRating" name="imdbRating" value="{{imdbRating}}">
                </div>

                <div class="mb-3">
                    <label for="owner" class="form-label">Owner:</label>
                    <input type="text" class="form-control" id="owner" name="owner" value="{{owner}}">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Edit movie</button>
                </div>

            </form>
        </div>
    </div>
</div>