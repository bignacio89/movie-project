<div class="container">
    <div class="row justify-content-center">
        <h2> Movie Random List </h2>
        <div class="row">
            {{#each movies }}
            <div class="card col-2 m-1 mb-3">
                <form action="/recommendations/{{id}}" method="POST">
                    <img src="https://www.themoviedb.org/t/p/w440_and_h660_face{{poster_path}}" alt="image">
                    <h3>{{original_title}}</h3>
                    <p class="textWay">{{overview}}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href='/movie/{{id}}/details' class="btn btn-sm btn-outline-secondary">Go to
                                details</a>
                            {{#if ...isLogin}}
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Add to List</button>
                            {{/if}}
                        </div>
                    </div>
                </form>
            </div>
            {{/each}}
        </div>
    </div>
</div>