<div class="container">
    <div class="row justify-content-center">

        <h1>Sign Up</h1>

        <form action="/signup" method="POST">

            <div class="mb-3">
                <label for="usernameInput" class="form-label">Username:</label>
                <input type="text" class="form-control" name="username" id="usernameInput">
            </div>

            <div class="mb-3">
                <label for="emailInput" class="form-label">Email:</label>
                <input type="email" class="form-control" name="email" id="emailInput">
            </div>

            <div class="mb-3">
                <label for="pwdInput" class="form-label">Password:</label>
                <input type="password" class="form-control" name="userPwd" id="pwdInput">
            </div>

            <div class="mb-3">
                <label for="descriptionInput" class="form-label">Description:</label>
                <input type="text" class="form-control" name="description" id="descriptionInput">
            </div>

            <div class="mb-3">
                <label for="imageInput" class="form-label">Avatar:</label>
                <input type="url" class="form-control" name="avatar" id="imageInput">
            </div>
            <div>
                <button type="submit" class="btn btn-dark">Register</button>
            </div>

            {{#if errorMessage}}
            <div id="errorMessage">
                <p>{{errorMessage}}</p>
            </div>
            {{/if}}


        </form>


    </div>
</div>